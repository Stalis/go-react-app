    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "command": "npm start",
            "request": "launch",
            "type": "node-terminal",
            "cwd":"${workspaceFolder}/web/app",
            "windows": {
                "cwd":"${workspaceFolder}\\web\\app"
            },
            "preLaunchTask": "Client Build"
        },
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "envFile": "${workspaceFolder}/configs/.env",
            "windows": {
                "program": "${workspaceFolder}\\cmd\\server\\main.go",
                "envFile": "${workspaceFolder}\\configs\\.env"
            },
            "preLaunchTask": "Server Build"
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": ["Server", "Client"]
        }
    ]
}